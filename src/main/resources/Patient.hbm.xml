<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.ivory.ivory.beans.Patient" table="patients">
      <meta attribute="class-description">
         This class contains the patient detail. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="fname" column="first_name" type="string"/>
      <property name="lname" column="last_name" type="string"/>
      <property name="email" column="email" type="string"/>
      <property name="address" column="address" type="string"/>      
      <property name="dob" column="dob" type="date"/>
      <property name="gender" column="gender" type="character"/>
      <property name="phone" column="phone" type="string"/>
      <property name="mobile" column="mobile" type="string"/>
   </class>
</hibernate-mapping>