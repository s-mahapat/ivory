<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ivory.ivory.beans.TreatmentPlan" table="treatment_plans">
		<meta attribute="class-description">
			This class contains the treatment plans for a patient.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="name" column="name" type="string" />
		<property name="date" column="date" type="date" />
		<many-to-one name="patient" column="patient_id"
			not-null="true" class="com.ivory.ivory.beans.Patient" />
	</class>
</hibernate-mapping>